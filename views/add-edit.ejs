<%- include("partials/header"); -%>
    <style>
        header {
            margin: 0;
            padding: 0;
        }

        .container {
            text-align: center;
        }

        .adding {
            max-width: 600px;
            width: 100%;
            padding: 20px;
            border: 1px solid #ccc;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            margin-top: 20px;
            margin-left: 25%;
            font-size: 12px;
        }

        .form-group {
            margin-bottom: 15px;
        }

        label {
            display: block;
            font-weight: bold;
            margin-bottom: 5px;
            color: #20c997;
        }

        input,
        textarea {
            width: 100%;
            padding: 10px;
            box-sizing: border-box;
            border: 1px solid #ccc;
            border-radius: 4px;
            margin-top: 5px;
            margin-bottom: 10px;
        }

        .btn-custom {
            background-color: #20c997;
            color: white;
            padding: 10px 15px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

        .btn-custom:hover {
            background-color: #45a049;
        }
    </style>

    <div class="container">
        <% if (isEditMode) { %>
            <h1 style="color: #20c997;">Edit Book</h1>
            <form action="/edit/<%= book.id %>" method="post" class="adding">
                <h1 style="color: #20c997;">Edit Book</h1>
                <form action="/edit/<%= book.id %>" method="post" class="adding">
                    <div class="form-group">
                        <label>Title</label>
                        <input type="text" name="title" class="form-control" value="<%= book.title %>">
                    </div>
                    <div class="form-group">
                        <label>Key Principles</label>
                        <textarea name="key_principles" cols="40" rows="2"
                            class="form-control"><%= book.key_principles %></textarea>
                    </div>
                    <div class="form-group">
                        <label>Quotes</label>
                        <textarea name="quotes" cols="40" rows="2" class="form-control"><%= book.quotes %></textarea>
                    </div>
                    <div class="form-group">
                        <label>Actions to take</label>
                        <textarea name="actions_to_take" cols="40" rows="2"
                            class="form-control"><%= book.actions_to_take %></textarea>
                    </div>
                    <div class="form-group">
                        <label>Personal reflections</label>
                        <textarea name="personal_reflections" cols="40" rows="2"
                            class="form-control"><%= book.personal_reflections %></textarea>
                    </div>
                    <div class="form-group">
                        <label>Rating</label>
                        <input type="text" name="rating" class="form-control" value="<%= book.rating %>">
                    </div>
                    <div class="form-group">
                        <label>Date</label>
                        <input type="date" name="submit_date" class="form-control"
                            value="<%= book.submit_date ? book.submit_date.toISOString().split('T')[0] : '' %>">
                    </div>
                    <button type="submit" class="btn btn-custom">Update</button>
                </form>
                <% } else { %>
                    <h1 style="color: #20c997;">Add a New Book</h1>
                    <form action="/add" method="post" class="adding">
                        <div class="form-group">
                            <label>Title</label>
                            <input type="text" name="title" class="form-control">
                        </div>
                        <div class="form-group">
                            <label style="padding-bottom: 10px;">Description</label>
                        </div>
                        <div class="form-group">
                            <label>Key Principles</label>
                            <textarea name="key_principles" cols="40" rows="2" class="form-control"></textarea>
                        </div>
                        <div class="form-group">
                            <label>Quotes</label>
                            <textarea name="quotes" cols="40" rows="2" class="form-control"></textarea>
                        </div>
                        <div class="form-group">
                            <label>Actions to take</label>
                            <textarea name="actions_to_take" cols="40" rows="2" class="form-control"></textarea>
                        </div>
                        <div class="form-group">
                            <label>Personal reflections</label>
                            <textarea name="personal_reflections" cols="40" rows="2" class="form-control"></textarea>
                        </div>
                        <div class="form-group">
                            <label>Rating</label>
                            <input type="text" name="rating" class="form-control">
                        </div>
                        <div class="form-group">
                            <label>Date</label>
                            <input type="date" name="submit_date" class="form-control">
                        </div>
                        <button type="submit" class="btn btn-custom">Publish</button>
                    </form>
                    <% } %>
    </div>
    <%- include("partials/footer"); -%>